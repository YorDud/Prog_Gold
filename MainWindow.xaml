<Window x:Class="Prog_Gold.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Prog_Gold"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="Rez_Gold" Height="1080" Width="1920" Closed="Window_Closed">

    <Window.Resources>
        <!-- Add Material Design Resource Dictionary -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>



    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Background="#f0f0f0" Grid.Column="0">
            <Button Content="Технолог" FontSize="16" Margin="3" Padding="10" Height="45" 
                    HorizontalAlignment="Stretch" Click="Tech_Click" />

            <Button Content="Бухгалтерия" FontSize="13" Margin="3" Padding="10" Height="45" 
        HorizontalAlignment="Stretch" Click="Buhg_Click" />
        </StackPanel>



        <ContentControl x:Name="Tech" Grid.Column="1" Visibility="Hidden">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Background="White" Margin="15,15,15,15"
CornerRadius="15" 
               
Padding="10">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" Color="#FF673AB7" ShadowDepth="0"></DropShadowEffect>
                    </Border.Effect>
                    <Grid Grid.Row="1" Grid.ColumnSpan="2" Width="auto" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="170"/>
                            <ColumnDefinition Width="170"/>
                            <ColumnDefinition Width="170"/>
                            <ColumnDefinition Width="170"/>
                            <ColumnDefinition Width="170"/>
                            <ColumnDefinition Width="170"/>
                            <ColumnDefinition Width="170"/>
                            <ColumnDefinition Width="170"/>
                            <ColumnDefinition Width="170"/>
                            <ColumnDefinition Width="170"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>


                        <Border Grid.RowSpan="2" Width="160" VerticalAlignment="Center" HorizontalAlignment="Center" Background="#FFEFECEC" Height="80" CornerRadius="10">
                            <Label VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                <Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                            <TextBlock Text="Дата:" FontSize="12" FontWeight="Bold" FontFamily="Yu Gothic UI" TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Label>
                        <DatePicker x:Name="DateZakaz" Grid.Row="1" Grid.Column="0" Margin="7,0,7,0" Height="30" Padding="3" Style="{StaticResource MaterialDesignOutlinedDatePicker}"/>

                        <Border Grid.RowSpan="2" Grid.Column="1" Width="160" VerticalAlignment="Center" HorizontalAlignment="Center" Background="#FFEFECEC" Height="80" CornerRadius="10">
                            <Label VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <Label Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                            <TextBlock Text="Заводской № заказа:" FontSize="12" FontWeight="Bold" FontFamily="Yu Gothic UI" TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Label>
                        <TextBox x:Name="NumberZakaz" Grid.Row="1" Grid.Column="1" Margin="7,0,7,0" Height="30" Padding="3" Style="{StaticResource MaterialDesignOutlinedTextBox}" PreviewTextInput="TextBox_PreviewTextInput"/>


                        <Border Grid.RowSpan="2" Grid.Column="2" Width="160" VerticalAlignment="Center" HorizontalAlignment="Center" Background="#FFEFECEC" Height="80" CornerRadius="10">
                            <Label VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <Label Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                            <TextBlock Text="Индивидуальный № плат:" FontSize="12" FontWeight="Bold" FontFamily="Yu Gothic UI" TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Label>
                        <TextBox x:Name="IndivNumber" Grid.Row="1" Grid.Column="2" Margin="7,0,7,0" Height="30" Padding="3" Style="{StaticResource MaterialDesignOutlinedTextBox}" PreviewTextInput="TextBox_PreviewTextInput"/>


                        <Border Grid.RowSpan="2" Grid.Column="3" Width="160" VerticalAlignment="Center" HorizontalAlignment="Center" Background="#FFEFECEC" Height="80" CornerRadius="10">
                            <Label VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <Label Grid.Row="0" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                            <TextBlock Text="Длина заготовки:" FontSize="12" FontWeight="Bold" FontFamily="Yu Gothic UI" TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Label>
                        <TextBox x:Name="LengthZag" Grid.Row="1" Grid.Column="3" Margin="7,0,7,0" Height="30" Padding="3" Style="{StaticResource MaterialDesignOutlinedTextBox}" PreviewTextInput="TextBox_PreviewTextInput"/>


                        <Border Grid.RowSpan="2" Grid.Column="4" Width="160" VerticalAlignment="Center" HorizontalAlignment="Center" Background="#FFEFECEC" Height="80" CornerRadius="10">
                            <Label VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <Label Grid.Row="0" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                            <TextBlock Text="Ширина заготовки:" FontSize="12" FontWeight="Bold" FontFamily="Yu Gothic UI" TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Label>
                        <TextBox x:Name="HeightZag" Grid.Row="1" Grid.Column="4" Margin="7,0,7,0" Height="30" Padding="3" Style="{StaticResource MaterialDesignOutlinedTextBox}" PreviewTextInput="TextBox_PreviewTextInput"/>


                        <Border Grid.RowSpan="2" Grid.Column="5" Width="160" VerticalAlignment="Center" HorizontalAlignment="Center" Background="#FFEFECEC" Height="80" CornerRadius="10">
                            <Label VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <Label Grid.Row="0" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                            <TextBlock Text="Количество заготовок, шт:" FontSize="12" FontWeight="Bold" FontFamily="Yu Gothic UI" TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Label>
                        <TextBox x:Name="KolichZag" Grid.Row="1" Grid.Column="5" Margin="7,0,7,0" Height="30" Padding="3" Style="{StaticResource MaterialDesignOutlinedTextBox}" PreviewTextInput="TextBox_PreviewTextInput"/>


                        <Border Grid.RowSpan="2" Grid.Column="6" Width="160" VerticalAlignment="Center" HorizontalAlignment="Center" Background="#FFEFECEC" Height="80" CornerRadius="10">
                            <Label VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <Label Grid.Row="0" Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                            <TextBlock Text="Площадь покрытия ТОР (дм2):" FontSize="12" FontWeight="Bold" FontFamily="Yu Gothic UI" TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Label>
                        <TextBox x:Name="PloshTOP" Grid.Row="1" Grid.Column="6" Margin="7,0,7,0" Height="30" Padding="3" Style="{StaticResource MaterialDesignOutlinedTextBox}" PreviewTextInput="TextBox_PreviewTextInput"/>

                        <Border Grid.RowSpan="2" Grid.Column="7" Width="160" VerticalAlignment="Center" HorizontalAlignment="Center" Background="#FFEFECEC" Height="80" CornerRadius="10">
                            <Label VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <Label Grid.Row="0" Grid.Column="7" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                            <TextBlock Text="Площадь покрытия ВОТ (дм2):" FontSize="12" FontWeight="Bold" FontFamily="Yu Gothic UI" TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Label>
                        <TextBox x:Name="PloshBOT" Grid.Row="1" Grid.Column="7" Margin="7,0,7,0" Height="30" Padding="3" Style="{StaticResource MaterialDesignOutlinedTextBox}" PreviewTextInput="TextBox_PreviewTextInput"/>

                        <Border Grid.RowSpan="2" Grid.Column="8" Width="160" VerticalAlignment="Center" HorizontalAlignment="Center" Background="#FFEFECEC" Height="80" CornerRadius="10">
                            <Label VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <Label Grid.Row="0" Grid.Column="8" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                            <TextBlock Text="Расход металла золота лаборатория. (расход металла золота по анализу), г:" FontSize="9" FontWeight="Bold" FontFamily="Yu Gothic UI" TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Label>
                        <TextBox x:Name="RashLab" Grid.Row="1" Grid.Column="8" Margin="7,0,7,0" Height="30" Padding="3" Style="{StaticResource MaterialDesignOutlinedTextBox}" PreviewTextInput="TextBox_PreviewTextInput"/>


                        <Border Grid.RowSpan="2" Grid.Column="9" Width="160" VerticalAlignment="Center" HorizontalAlignment="Center" Background="#FFEFECEC" Height="80" CornerRadius="10">
                            <Label VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <Label Grid.Row="0" Grid.Column="9" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                            <TextBlock Text="% содержания соли золота:" FontSize="12" FontWeight="Bold" FontFamily="Yu Gothic UI" TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Label>
                        <TextBox x:Name="SolZol" Grid.Row="1" Grid.Column="9" Margin="7,0,7,0" Height="30" Padding="3" Style="{StaticResource MaterialDesignOutlinedTextBox}" PreviewTextInput="TextBox_PreviewTextInput"/>



                        <Border Grid.Row="3" Grid.ColumnSpan="2" Grid.Column="0" Width="330" VerticalAlignment="Center" HorizontalAlignment="Center" Background="#FFEFECEC" Height="30" CornerRadius="10">
                            <Label VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <Label Content="Коэф. на унос:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="5" FontSize="12" FontWeight="Bold" FontFamily="Yu Gothic UI"/>
                        <TextBox x:Name="KofUnos" Grid.Row="3" Margin="5" Height="30" Padding="3" Style="{StaticResource MaterialDesignOutlinedTextBox}" Grid.Column="1" PreviewTextInput="TextBox_PreviewTextInput"/>

                        <Border Grid.Row="4" Grid.ColumnSpan="2" Grid.Column="0" Width="330" VerticalAlignment="Center" HorizontalAlignment="Center" Background="#FFEFECEC" Height="30" CornerRadius="10">
                            <Label VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <Label Content="Коэф. на покрытие:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="5" FontSize="12" FontWeight="Bold" FontFamily="Yu Gothic UI"/>
                        <TextBox x:Name="KofPokr" Grid.Row="4" Margin="5" Height="30" Padding="3" Style="{StaticResource MaterialDesignOutlinedTextBox}" Grid.Column="1" PreviewTextInput="TextBox_PreviewTextInput"/>







                        <Button Grid.Row="10" Content="Добавить значения" Margin="5" Grid.ColumnSpan="2" Click="Dobav_Click"/>

                    </Grid>
                </Border>

                <TextBlock Text="Дата начала:" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Margin="10,0,10,0"/>
                <DatePicker Name="StartDatePicker" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="90,0,0,0" Width="100"  Height="30" Padding="3" Style="{StaticResource MaterialDesignOutlinedDatePicker}"/>

                <TextBlock Text="Дата конца:" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Margin="230,0,10,0"/>
                <DatePicker Name="EndDatePicker" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="310,0,0,0" Width="100"   Height="30" Padding="3" Style="{StaticResource MaterialDesignOutlinedDatePicker}"/>

                <Button Grid.Row="2" Content="Расчитать итог" Margin="451,5,1111,5" Click="GenerateReport_Click"/>



                <DataGrid x:Name="dataGridGold_Tech" IsReadOnly="True" AutoGenerateColumns="False" Margin="15" Grid.Row="3" Grid.ColumnSpan="2" Height="600"
          HorizontalGridLinesBrush="Black" VerticalGridLinesBrush="Black"
          Background="{DynamicResource MaterialDesignPaper}">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                            <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}"/>
                            <Setter Property="Height" Value="100"/>

                            <!-- Создание кастомного шаблона для заголовка с переносом текста -->
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" TextWrapping="Wrap" MaxWidth="150" VerticalAlignment="Center" TextAlignment="Center" HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                            <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}"/>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="№ п/п" Width="40" Binding="{Binding ID}" />
                        <DataGridTextColumn Header="Дата проведения" Width="110" Binding="{Binding DateCreate, StringFormat={}{0:dd.MM.yyyy HH:mm}}" />
                        <DataGridTextColumn Header="Дата заказа" Width="110" Binding="{Binding DateZakaz, StringFormat={}{0:dd.MM.yyyy HH:mm}}" />
                        <DataGridTextColumn Header="Заводской № заказа" Width="100" Binding="{Binding NumberZakaz}" />
                        <DataGridTextColumn Header="Индивидуальный № плат" Width="100" Binding="{Binding IndivNumber}" />
                        <DataGridTextColumn Header="Длина заг. (м2)" Width="90" Binding="{Binding LengthZag}" />
                        <DataGridTextColumn Header="Ширина заг. (м2)" Width="90" Binding="{Binding HeightZag}" />
                        <DataGridTextColumn Header="Количество заготовок, шт" Width="100" Binding="{Binding KolichZag}" />
                        <DataGridTextColumn Header="Площадь поверхности заготовок (м2) (с двух сторон)" Width="110" Binding="{Binding PloshPoverh}" />
                        <DataGridTextColumn Header="Площадь покрытия ТОР (дм2)" Width="100" Binding="{Binding PloshTOP}" />
                        <DataGridTextColumn Header="Площадь покрытия ВОТ (дм2)" Width="100" Binding="{Binding PloshBOT}" />
                        <DataGridTextColumn Header="Площадь покрытия всего (дм2) (без тех.поля)" Width="100" Binding="{Binding PloshPokrit}" />
                        <DataGridTextColumn Header="Расход металла золота на унос, г" Width="100" Binding="{Binding RashodUnos}" />
                        <DataGridTextColumn Header="Расход металла золота на покрытие, г" Width="100" Binding="{Binding RashodPokrit}" />
                        <DataGridTextColumn Header="Расход металла золота лаборатория. (расход металла золота по анализу), г" Width="150" Binding="{Binding RashLab}" />
                        <DataGridTextColumn Header="Сумма расхода металла золота, г" Width="108" Binding="{Binding SumRash}" />
                        <DataGridTextColumn Header="% содержания соли золота" Width="90" Binding="{Binding SolZol}" />
                        <DataGridTextColumn Header="Сумма расхода соли золота, г" Width="100" Binding="{Binding SumRashSolZol}" />
                    </DataGrid.Columns>
                </DataGrid>






