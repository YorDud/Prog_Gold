       Grid.Column="5" 
       VerticalAlignment="Center" 
       HorizontalAlignment="Center" 
       Margin="5">
                        <TextBlock Text="Масса общаяя (лигат.):" 
               FontSize="15" 
               FontWeight="Bold" 
               FontFamily="Yu Gothic UI" 
               TextWrapping="Wrap" 
               TextAlignment="Center" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center"/>
                    </Label>
                    <TextBox x:Name="SpisSproizSol" 
         Grid.Row="2" 
         Grid.Column="5" 
         Margin="5"  
         Height="30" 
         Padding="3" 
         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>



                    <Label Grid.Row="1" 
       Grid.Column="6" 
       VerticalAlignment="Center" 
       HorizontalAlignment="Center" 
       Margin="5">
                        <TextBlock Text="Масса общаяя (лигат.):" 
               FontSize="15" 
               FontWeight="Bold" 
               FontFamily="Yu Gothic UI" 
               TextWrapping="Wrap" 
               TextAlignment="Center" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center"/>
                    </Label>
                    <TextBox x:Name="AfinSol" 
         Grid.Row="2" 
         Grid.Column="6" 
         Margin="5"  
         Height="30" 
         Padding="3" 
         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>




                    <Label Grid.Row="1" 
Grid.Column="7" 
VerticalAlignment="Center" 
HorizontalAlignment="Center" 
Margin="5">
                        <TextBlock Text="Масса хим. Чистого вещества (ДМ):" 
        FontSize="15" 
        FontWeight="Bold" 
        FontFamily="Yu Gothic UI" 
        TextWrapping="Wrap" 
        TextAlignment="Center" 
        HorizontalAlignment="Center" 
        VerticalAlignment="Center"/>
                    </Label>
                    <TextBox x:Name="AfinGold" 
  Grid.Row="2" 
  Grid.Column="7" 
  Margin="5"  
  Height="30" 
  Padding="3" 
  Style="{StaticResource MaterialDesignOutlinedTextBox}"/>


                    <Label Grid.Row="1" 
       Grid.Column="8" 
       VerticalAlignment="Center" 
       HorizontalAlignment="Center" 
       Margin="5">
                        <TextBlock Text="Масса общаяя (лигат.):" 
               FontSize="15" 
               FontWeight="Bold" 
               FontFamily="Yu Gothic UI" 
               TextWrapping="Wrap" 
               TextAlignment="Center" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center"/>
                    </Label>
                    <TextBox x:Name="NormPotSol" 
         Grid.Row="2" 
         Grid.Column="8" 
         Margin="5"  
         Height="30" 
         Padding="3" 
         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>




                    <Label Grid.Row="1" 
Grid.Column="9" 
VerticalAlignment="Center" 
HorizontalAlignment="Center" 
Margin="5">
                        <TextBlock Text="Масса хим. Чистого вещества (ДМ):" 
        FontSize="15" 
        FontWeight="Bold" 
        FontFamily="Yu Gothic UI" 
        TextWrapping="Wrap" 
        TextAlignment="Center" 
        HorizontalAlignment="Center" 
        VerticalAlignment="Center"/>
                    </Label>
                    <TextBox x:Name="NormPotGold" 
  Grid.Row="2" 
  Grid.Column="9" 
  Margin="5"  
