  Padding="3" 
  Style="{StaticResource MaterialDesignOutlinedTextBox}"/>













                    <Button Grid.Row="10" Content="Обновить значения" Margin="5"  Grid.ColumnSpan="10" Width="300" Click="EditBuhg_Click"/>

                </Grid>
