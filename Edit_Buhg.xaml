               HorizontalAlignment="Center" 
               VerticalAlignment="Center"/>
                    </Label>
                    <TextBox x:Name="PrihodSol" 
         Grid.Row="2" 
         Grid.Column="2" 
         Margin="5"  
         Height="30" 
         Padding="3" 
         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>


                    <Label Grid.Row="1" 
       Grid.Column="3" 
       VerticalAlignment="Center" 
       HorizontalAlignment="Center" 
       Margin="5">
