               FontSize="15" 
               FontWeight="Bold" 
               FontFamily="Yu Gothic UI" 
               TextWrapping="Wrap" 
               TextAlignment="Center" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center"/>
                    </Label>
                    <TextBox x:Name="INP" 
         Grid.Row="2" 
         Grid.Column="1" 
         Margin="5"  
         Height="30" 
         Padding="3" 
         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

