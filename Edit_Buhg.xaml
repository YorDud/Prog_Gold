               FontSize="15" 
               FontWeight="Bold" 
               FontFamily="Yu Gothic UI" 
               TextWrapping="Wrap" 
               TextAlignment="Center" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center"/>
                    </Label>
                    <TextBox x:Name="PrihodSoderSol" 
         Grid.Row="2" 
         Grid.Column="3" 
